    <script>

        function validations(){
            let valid = true
                const emailInput = document.getElementById('email').value
                const commentInput = document.getElementById('comment').value
                const nameInput = document.getElementById('name').value
                const phoneInput = document.getElementById('phone').value

                const emailMessage = document.getElementById('emailerr');
                const commentMessage = document.getElementById('commenterr');
                const nameMessage = document.getElementById('nameerr');
                const phoneMessage = document.getElementById('phoneerr');

                if (!/^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$/.test(emailInput)) {
                    emailMessage.textContent = ' enter a valid email address.';
                    valid = false
                }

                if (!/^\d{10}$/.test(phoneInput)) {
                    phoneMessage.textContent = 'Enter a valid 10-digit number.';
                    valid = false;
                }

                if(commentInput.trim() <= 10){
                    commentMessage.textContent = 'Enter Minimum 10 or more letters';
                    valid=false
                }
                if(nameInput.trim() >= 10){
                    nameMessage.textContent = 'Entered name is morethan 10 letters';
                    valid=false
                }else if(nameInput.trim()){
                    nameMessage.textContent = 'Enter a name ';
                    valid=false
                }
                return valid
        }
