                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, Added to Cart!'
                })
                if (res.isConfirmed) {
                    const productcart = await fetch('/addedcart',{
                    method:'POST',
                    headers:{'Content-Type':'application/json'},
