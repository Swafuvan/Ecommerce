<%- include('header') %>

    <!-- Quick view -->
    <% datas.forEach((items,index)=>{ %>
        <div class="modal fade custom-modal" id="quickViewModal<%= index %>" tabindex="-1"
            aria-labelledby="quickViewModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="detail-gallery">
                                    <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                    <!-- MAIN SLIDES -->
                                    <div class="product-image-slider">
                                        <% items.images.forEach((product)=>{ %>
                                            <figure class="border-radius-10">
                                                <img src="/productimage/<%= product %>" alt="product image">
                                            </figure>
                                            <% }) %>

                                    </div>
                                    <!-- THUMBNAILS -->
                                    <div class="slider-nav-thumbnails pl-15 pr-15">
                                        <% items.images.forEach((product)=>{ %>
                                            <div><img src="/productimage/<%= product %>" alt="product image"></div>
                                            <% }) %>
                                    </div>

                                </div>
                                <!-- End Gallery -->
                                <div class="social-icons single-share">
                                    <ul class="text-grey-5 d-inline-block">
                                        <li><strong class="mr-10">Share this:</strong></li>
                                        <li class="social-facebook"><a href="#"><img
                                                    src="/assets/userAsset/imgs/theme/icons/icon-facebook.svg"
                                                    alt=""></a></li>
                                        <li class="social-twitter"> <a href="#"><img
                                                    src="/assets/userAsset/imgs/theme/icons/icon-twitter.svg"
                                                    alt=""></a></li>
                                        <li class="social-instagram"><a href="#"><img
                                                    src="/assets/userAsset/imgs/theme/icons/icon-instagram.svg"
                                                    alt=""></a></li>
                                        <li class="social-linkedin"><a href="#"><img
                                                    src="/assets/userAsset/imgs/theme/icons/icon-pinterest.svg"
                                                    alt=""></a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12 col-xs-12">
                                <div class="detail-info">
                                    <h3 class="title-detail mt-30">
                                        <%= items.Name %>
                                    </h3>
                                    <div class="product-detail-rating">
                                        <div class="pro-details-brand">
                                            <span> Brands: <a href="shop-grid-right.html">Colours Pardha</a></span>
                                        </div>
                                        <div class="product-rate-cover text-end">
                                            <div class="product-rate d-inline-block">
                                                <div class="product-rating" style="width:90%">
                                                </div>
                                            </div>
                                            <span class="font-small ml-5 text-muted"> (25 reviews)</span>
                                        </div>
                                    </div>
                                    <div class="clearfix product-price-cover">
                                        <div class="product-price primary-color float-left">
                                            <ins>₹<span class="text-brand">
                                                    <%= items.price %>
                                                </span></ins>
                                            <ins><span class="old-price font-md ml-15">
                                                    <% if(items.Offer){ %>
                                                        <%= items.basePrice %>
                                                            <% }else{ %>
                                                                <%= item.price %>
                                                                    <% } %>
                                                </span></ins>
                                            <span class="save-price  font-md color3 ml-15">15% Off</span>
                                        </div>
                                    </div>
                                    <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                    <div class="short-desc mb-30">
                                        <p class="font-sm">
                                            <%= items.description %>,!
                                        </p>
                                    </div>

                                    <div class="attr-detail attr-color mb-15">
                                        <strong class="mr-10">
                                            <%= items.Color %>
                                        </strong>

                                    </div>
                                    <div class="attr-detail attr-size">

                                        <ul class="list-filter size-filter font-small">
                                            <li><a href="#">M</a></li>
                                            <li><a href="#">L</a></li>
                                            <li><a href="#">XL</a></li>
                                            <li><a href="#">XXL</a></li>
                                        </ul>
                                    </div>
                                    <div class="bt-1 border-color-1 mt-30 mb-30"></div>

                                    <ul class="product-meta font-xs color-grey mt-50">
                                        <li>Availability:<span class="in-stock text-success ml-5">
                                                <%= items.Quantity %>
                                            </span></li>
                                    </ul>
                                </div>
                                <!-- Detail Info -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>

            <main class="main">
                <div class="page-header breadcrumb-wrap">
                    <div class="container">
                        <div class="breadcrumb">
                            <a href="/" rel="nofollow">Home</a>
                            <span></span> Shop
                        </div>
                    </div>
                </div>
                <section class="mt-50 mb-50">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="shop-product-fillter">
                                    <div class="totall-product">
                                        <p> We found <strong class="text-brand">
                                                <%= datas.Quantity %>
                                            </strong> items for you!</p>
                                    </div>
                                    <div class="sort-by-product-area">
                                        <div class="sort-by-cover mr-10">
                                            
                                            
                                        </div>
                                        <div class="sort-by-cover">
                                            <div class="sort-by-product-wrap">
                                                <div class="sort-by">
                                                    <span><i class="fi-rs-apps-sort"></i>Sort by:</span>
                                                </div>
                                                <div class="sort-by-dropdown-wrap">
                                                    <span> Featured <i class="fi-rs-angle-small-down"></i></span>
                                                </div>
                                            </div>
                                            <div class="sort-by-dropdown">
                                                <ul>
                                                    <li><a class="active" href="/shop?sort='featured'">Featured</a></li>
                                                    <li><a href="/shop?sort=1">Price: Low to High</a></li>
                                                    <li><a href="/shop?sort=-1">Price: High to Low</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row product-grid-3">
                                    <% datas.forEach((product,index)=>{ %>
                                        <div class="col-lg-3 col-md-4">
                                            <div style="height: 100%;" class="product-cart-wrap mb-30">
                                                <div class="product-img-action-wrap">
                                                    <div class="product-img product-img-zoom">
                                                        <a href="productview/?id=<%= product._id %>">
                                                            <img style="width: 100%; object-fit: cover; object-position: top; max-height: 250px;"
                                                                class="default-img"
                                                                src="/productimage/<%= product.coverImages %>" alt="">
                                                            <img style="width: 100%; object-fit: cover; object-position: top; max-height: 250px;"
                                                                class="hover-img"
                                                                src="/productimage/<%= product.coverImages %>" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="product-action-1">
                                                        <a aria-label="Quick view" class="action-btn hover-up"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#quickViewModal<%= index %>">
                                                            <i class="fi-rs-search"></i></a>
                                                        <a aria-label="Add To Wishlist" class="action-btn hover-up"
                                                            onclick="whishlistitem('<%= product._id %>','<%= data._id %>')"><i
                                                                class="fi-rs-heart"></i></a>
                                                    </div>
                                                    <div
                                                        class="product-badges product-badges-position product-badges-mrg">
                                                    </div>
                                                </div>
                                                <div class="product-content-wrap">
                                                    <div class="product-category">
                                                        <a href="shop-grid-right.html">
                                                            <%= product.category %>
                                                        </a>
                                                    </div>
                                                    <h2><a href="shop-product-right.html">
                                                            <%= product.Name %>
                                                        </a></h2>
                                                    <div class="rating-result" title="90%">
                                                        <span>
                                                            <span>90%</span>
                                                        </span>
                                                    </div>
                                                    <div class="product-price">
                                                        ₹<span>
                                                            <%= product.price %>
                                                        </span>
                                                        <span class="old-price">
                                                            <% if(product.Offer){ %>
                                                                <%= product.basePrice %>
                                                                    <% }else{ %>
                                                                        <%= product.price %>
                                                                            <% } %>
                                                        </span>
                                                    </div>
                                                    <div class="product-action-1 show">
                                                        <a aria-label="Add To Cart" class="action-btn hover-up"
                                                            onclick="modalcall('<%= product._id %>','<%= data._id %>')">
                                                            <i class="fi-rs-shopping-bag-add"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <!--pagination-->
                                <div class="pagination-area mt-15 mb-sm-5 mb-lg-0">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination justify-content-start">
                                            <% if (current>1) { %>
                                                <li class="page-item"><a class="page-link"
                                                        href="/pagination?page=-1&current=<%= current %>"><i
                                                            class="fi-rs-angle-double-small-left"></i></a></li>
                                                <% } %>
                                                    <li class="page-item active"><a class="page-link"
                                                            href="/pagination?value=1"><%= current %></a></li>
                                                    <li class="page-item"><a class="page-link"
                                                            href="/pagination?value=2"><%= current+1 %></a></li>
                                                    <li class="page-item"><a class="page-link"
                                                            href="/pagination?value=3"><%= current+2 %></a></li>
                                                    <li class="page-item"><a class="page-link"
                                                            href="/pagination?page=1&current=<%= current %>"><i
                                                                class="fi-rs-angle-double-small-right"></i></a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </main>

            <%- include('footer') %>

                <script>

                    async function modalcall(productid, userid) {
                        if (userid) {
                            let res = await Swal.fire({
                                title: 'Are you sure?',
                                text: "want to add this product to the Cart!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, Added to Cart!'
                            })
                            if (res.isConfirmed) {
                                const productcart = await fetch('/addedcart', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({ userid, productid })
                                })
                                if (productcart.status === 200) {
                                    Swal.fire(
                                        'Added!',
                                        'Your product is Added to Cart.',
                                        'success'
                                    )
                                }
                            }

                        } else {
                            let result = await Swal.fire({
                                title: "Don't have an Account?",
                                text: "want to add this product Create an Account!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                            })
                        }
                    }

                    async function whishlistitem(productid, userid) {
                        if (userid) {
                            const productwhishlist = await fetch('/addedwhishlist', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ productid, userid })
                            })
                            if (productwhishlist.status === 200) {
                                Swal.fire(
                                    'Added!',
                                    'Your product is Added to Whishlist.',
                                    'success'
                                )
                            }
                        } else {
                            let result = await Swal.fire({
                                title: "Don't have an Account?",
                                text: "want to add this product Create an Account!",
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                            })
                        }
                    }



                </script>