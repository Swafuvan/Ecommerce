            <script>
                async function modalcall(productid,userid) {
                    if(userid){
                        const productcart = await fetch('/addedcart',{
                        method:'POST',
                        headers:{'Content-Type':'application/json'},
                        body:JSON.stringify({userid,productid})
                        })
                        if(productcart.status===200){
