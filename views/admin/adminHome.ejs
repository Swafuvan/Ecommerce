    <script>
        function reportvalidation(){
            let val =true
            const firstdate =document.getElementById('startDate').value
            const enddate =document.getElementById('endDate').value

            const srtmessage=document.getElementById('nameerr')
            const endmessage=document.getElementById('prophoneerr')

            if(!firstdate.trim()){
                srtmessage.innerHTML = 'Please Select a Date'
                val =false
            }else if(firstdate >= enddate){
                srtmessage.innerHTML='Please Enter valid Date'
                val= false
            }

            if(!enddate.trim()){
                endmessage.innerHTML= 'Please Select a Date'
                val = false
            }else if(new Date(enddate) >= new Date()){
                endmessage.innerHTML= 'Please Select a proper Date'
                val = false
            }
            return val
            
        }
        
            document.getElementById('startDate').addEventListener('input', function () {
                document.getElementById('nameerr').textContent = '';
            });

            document.getElementById('endDate').addEventListener('input', function () {
                document.getElementById('prophoneerr').textContent = '';
            });
            
    </script>

